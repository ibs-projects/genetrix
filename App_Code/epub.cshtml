
@helper epubImageCard(string imgurl, string titre, string description,string leftrigth)
{
    <div class="card center @leftrigth">
        <img class="card-img img-fluid" src="~/assets/images/small/img-6.jpg" alt="Card image">
        <div class="card-img-overlay">
            <h4 class="card-title text-white mt-0">Card title</h4>
            <p class="card-text text-light">
                This is a wider card with supporting text below as a
                natural lead-in to additional content. This content is a little bit
                longer.
            </p>
            <p class="card-text">
                <small class="text-white">Last updated 3 mins ago</small>
            </p>
        </div>
    </div>
}

