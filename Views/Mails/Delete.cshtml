@model genetrix.Models.Mail

@{
    ViewBag.Title = "Mail";
    ViewBag.pTitle = "Suppression du mail";
    ViewBag.pageTitle = "Mail";
   ViewBag.pageImage = "~/assets/images/IU/client.png";
}
@Html.Partial("~/Views/_Shared/_head_css.cshtml")

<div class="card">
    <div class="card-header"><h4 class="text-danger">Vous êtes sur le point de supprimer cet élément !</h4></div>
    <div class="card-body">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Objet)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Objet)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Message)
        </dt>

        <dd>
            @Html.Raw(Model.Message)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdresseEmeteur)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdresseEmeteur)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdresseDest)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdresseDest)
        </dd>

    </dl>

    </div>
    <div class="card-footer">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-default" /> |
                @Html.ActionLink("Voir la liste", "Index")
            </div>
        }
    </div>
</div>
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
