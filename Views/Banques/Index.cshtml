@model IEnumerable<genetrix.Models.Banque>

@{
    ViewBag.Title = "Banques";
    ViewBag.pTitle = "Liste de Banques";
    ViewBag.pageTitle = "Banques";
    ViewBag.pageImage = "~/assets/images/IU/bank.png";
}

@Html.Partial("~/Views/_Shared/_head_css.cshtml")

<p>
    <a class="" href="@Url.Action("Create","Banques")">
        <i class="dripicons-plus me-2"></i>
        Nouvelle Banque
    </a>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <p class="text-danger">@ViewBag.msg</p>
                <h4 class="card-title">Liste de dossiers</h4>

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nom)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nom)
                                </td>
                                <td>
                                    <a href="@Url.Content("~/Banques/Edit/"+item.Id)" _action_requied_loader = "0" >Editer</a>|
                                    <a href="@Url.Content("~/Banques/Details/"+item.Id)" _action_requied_loader = "0" >Details</a>|
                                    <a href="@Url.Content("~/Banques/Delete/"+item.Id)" _action_requied_loader = "0" >Supprimer</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                  
                </table>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
