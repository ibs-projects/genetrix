@using genetrix.Models
@model VariablGlobales
<div class="row">

    @{
        var rej = Model.GetDataByEtapes(new int?[] { -230,-231,-232,-250 }).Nbr;
        var aapure = Model.GetDataByEtapes(new int?[] { 22,23 }).Nbr;
        var echu = Model.GetDataByEtapes(new int?[] { 25}).Nbr;
    }
    @*  *@
    <a _action_requied_loader="0" href="@Url.Content("~/Dossiers/Index?st=aapurer")" class="col-md-6 col-xl-4">
        <div class="card card-item">
            <div class="card-body">
                <div>
                    <div class="float-end mt-2">
                        <div id="orders-chart1">
                            <p class="mdi mdi-folder-clock-outline icon0"></p>
                        </div>
                    </div>
                    <div>
                        <h4 class="mb-1 mt-1"><span data-plugin="counterup">@(aapure+rej+echu)</span></h4>
                        <p class="text-muted mb-0">Dossiers à apurer</p>
                    </div>
                    <p class="text-muted" style="position: absolute; bottom: 0; width: 100%;">
                        @{
                            //Notification
                            <span title="Dossiers en local" class="racourci-comp" href="loc-aapurer">
                                <span class="text-warning me-1"><i style="font:bolder" class="mdi mdi-folder-text me-1"></i>@(aapure)</span> @("A envoyer")
                            </span>
                            <span title="Dossiers à envoyer à la banque" class="racourci-comp" href="echu ">
                                <span class="text-danger me-1"><i style="font:bolder" class="mdi mdi-folder-clock-outline me-1"></i>@(echu)</span> <span style="text-transform:uppercase">é</span>chus
                            </span>
                            <span title="Dossiers rejetés" class="racourci-comp" href="rej-aapurer">
                                <span class="text-danger me-1"><i style="font:bolder" class="mdi mdi-folder-alert me-1"></i>@(rej)</span> @("Rejetés")
                            </span>
                        }
                </div>
            </div>
        </div>
    </a> <!-- end col-->

    @{
        var nonlu = Model.GetDataByEtapes(new int?[] {230,250}).Nbr;
        var encours = Model.GetDataByEtapes(new int?[] {231,232}).Nbr;
    }
    <a _action_requied_loader1="0" href="@Url.Content("~/Dossiers/Index?st=app-encours")" class="col-md-6 col-xl-4">
        <div class="card  card-item">
            <div class="card-body">
                <div>
                    <div class="float-end mt-2 ">
                        <div id="total-revenue-chart1">
                            <p class="mdi mdi-folder-sync-outline icon0"></p>
                        </div>
                    </div>
                    <div>
                        <h4 class="mb-1 mt-1"><span data-plugin="counterup">@(nonlu+encours)</span></h4>
                        <p class="text-muted mb-0">Dossiers envoyés</p>
                    </div>
                    @*<p class="text-muted mt-3 mb-0">
                            <span class="text-warning me-1"><i class="mdi mdi-alert me-1"></i>@info.NbrAnciens</span> @info.GetDureeString()
                        </p>*@
                <p class="text-muted" style="position: absolute; bottom: 0; width: 100%;">
                    @{
                        //Notification
                        <span title="Dossiers en local" class="racourci-comp" href="env-aapurer">
                            <span class="text-warning me-1"><i style="font:bolder" class="mdi mdi-folder-move me-1"></i>@(nonlu)</span> @("Non lus")
                        </span>
                        <span title="Dossiers transmis" class="racourci-comp" href="env-encours">
                            <span class="text-info me-1"><i class="mdi mdi-folder-refresh-outline me-1"></i>@(encours)</span> @("En cours")
                        </span>
                        @*<span title="Dossiers validés" class="racourci-comp" href="rej-echu">
                            <span class="text-danger me-1"><i style="font:bolder" class="mdi mdi-alert me-1"></i>@(rej)</span> @("Rejetés")
                        </span>*@

                    }

                </p>
                </div>
            </div>
        </div>
    </a> <!-- end col-->
    @{
        var apure = Model.GetDataByEtapes(new int?[] { 24 }).Nbr;
    }
    <a _action_requied_loader1="0" href="@Url.Content("~/Dossiers/Index?st=apure")" class="col-md-6 col-xl-4">
        <div class="card  card-item">
            <div class="card-body">
                <div>
                    <div class="float-end mt-2 ">
                        <div id="total-revenue-chart1">
                            <p class="uil uil-folder-check icon0"></p>
                        </div>
                    </div>
                    <div>
                        <h4 class="mb-1 mt-1"><span data-plugin="counterup">@apure</span></h4>
                        <p class="text-muted mb-0">Dossiers apurés</p>
                    </div>

                    <p class="text-white p-1 bg-gradient-success" style="position:absolute; bottom: 0; width: 40%;font-size:small;height:30px;margin-left:-20px;">
                        Apurés
                    </p>
                </div>
            </div>
        </div>
    </a>

</div>
