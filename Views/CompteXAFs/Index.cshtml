@model IEnumerable<genetrix.Models.CompteXAF>
@{
    ViewBag.Title = "Compte XAF";
    ViewBag.pTitle = "Compte XAF";
    ViewBag.pageTitle = "Compte XAF";
    ViewBag.pageImage = "~/assets/images/IU/client.png";
}
@Html.Partial("~/Views/_Shared/_head_css.cshtml")


<p>
    @Html.ActionLink("Ajouter", "Create")
</p>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header card-header1">
                Liste des comptes XAF de la banque
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <tbody>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NumCompte)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Libellé)
                                </th>
                                <th></th>
                            </tr>
                        </tbody>

                        <tfoot>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumCompte)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Libellé)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editer", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </tfoot>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
