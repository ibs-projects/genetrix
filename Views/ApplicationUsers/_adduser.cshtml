@model genetrix.Models.RegisterViewModel


@{
    ViewBag.Title = "Utilisateur";
    ViewBag.pTitle = "Nouvel utilisateur";
    ViewBag.pageTitle = "Utilisateur";
    ViewBag.pageImage = "~/assets/images/IU/user.png";
}
@*@Html.Partial("~/Views/_Shared/_head_css.cshtml")*@


<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("addUser", "auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal card">
            <div class="card-header card-header1 text-white">Nouvel utilisateur</div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="row">
                    <div class="form-group mb-3 col-md-8">
                        @Html.LabelFor(model => model.Nom, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group mb-3 col-md-4">
                        @Html.LabelFor(model => model.Sexe, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EnumDropDownListFor(model => model.Sexe, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Sexe, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

            </div>
            <div class="form-group mb-3 col-lg-12">
                <i class="mdi mdi-information"> </i>
                @Html.LabelFor(model => model.Prenom, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-lg-6">
                    <i class="mdi mdi-phone"> </i>
                    @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mb-3 col-lg-6">
                    <i class="mdi mdi-email"> </i>
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-lg-6">
                    <i class="mdi mdi-login"> </i>
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mb-3 col-lg-6">
                    <i class="mdi mdi-key"> </i>
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })*@
                        <input type="text" name="Password" class="form-control" value="@Model.Password" />
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="form-group mb-3 col-lg-6">
                    <i class="mdi mdi-bank"> </i>
                    @Html.Label("Structure", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        <select name="IdAgence" class="form-control">
                            <option value=""></option>
                            @{
                                try
                                {
                                    foreach (var item in Model.Sites)
                                    {
                                        <option value="@item.Id">@item.Nom</option>
                                    }
                                }
                                catch (Exception)
                                { }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group mb-3 col-lg-6">
                    <i class="mdi mdi-shield-account"> </i>
                    @Html.Label("Rôle", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        <select name="IdRole" class="form-control">
                            <option value=""></option>
                            @{
                                try
                                {
                                    foreach (var item in Model.Roles)
                                    {
                                        <option value="@item.RoleId">@item.Nom</option>
                                    }
                                }
                                catch (Exception)
                                { }
                            }
                        </select>
                    </div>
                </div>

            </div>

            <div class="hidden">
                @Html.LabelFor(model => model.NomEntreprise, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NomEntreprise, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomEntreprise, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group hidden mb-3 col-lg-3">
                    @Html.LabelFor(model => model.EstAdmin, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.EstAdmin)
                            @Html.ValidationMessageFor(model => model.EstAdmin, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group hidden mb-3 col-lg-3">
                    @Html.LabelFor(model => model.EstGestionnaire, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.EstGestionnaire)
                            @Html.ValidationMessageFor(model => model.EstGestionnaire, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <div class="card-footer">
                <div class="form-group mb-3">
                    <button type="submit" value="Enregistrer" class="btn btn-outline-info">
                        <i class="far fa-save me-2"></i>
                        Enrégistrer
                    </button>
                </div>
            </div>
        </div>
        }
        <div>
            @Html.ActionLink("Liste", "Index","comptebanquecommerciales")
        </div>
    </div>
    <!-- end col -->
</div>
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
