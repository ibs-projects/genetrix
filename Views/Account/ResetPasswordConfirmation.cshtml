@{
    ViewBag.Title = "Réinitialisation du mot de passe";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";

}
@Html.Partial("~/Views/_Shared/_head_css.cshtml")


<body class="authentication-bg">

    <div class="home-btn d-none d-sm-block">
        <a href=@Url.Action("Index", "index") class="text-dark"><i class="mdi mdi-home-variant h2"></i></a>
    </div>
    <div class="account-pages my-5  pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div>

                        <a href=@Url.Action("Index", "index") class="mb-5 d-block auth-logo">
                            <img src="~/assets/images/logo/logo-dark1.png" alt="" height="22" class="logo logo-dark">
                            <img src="~/assets/images/logo/logo-light1.png" alt="" height="22" class="logo logo-light">
                        </a>
                        <div class="card">

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4>Utilisateur</h4>
                                        </div>
                                        <div class="card-body">
                                            <hgroup class="title">
                                                <h3>@ViewBag.Title.</h3>
                                            </hgroup>
                                            <div>
                                                <p>
                                                    Votre mot de passe a été réinitialisé. Veuillez @Html.ActionLink("cliquer ici pour vous connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-5 text-center">
                            <p>
                                ©
                                <script>document.write(new Date().getFullYear())</script>  Developpé avec <i class="mdi mdi-heart text-danger"></i> par <a href="https://themesbrand.com/" target="_blank" class="text-reset"> P&L Interactiv</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>

</body>
        
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
