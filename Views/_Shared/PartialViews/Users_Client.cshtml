@model IEnumerable<genetrix.Models.CompteClient>

<p>
    @Html.ActionLink("Ajouter", "Create", "")
</p>
<div class="table-responsive">
    <table class="table table-centered table-nowrap mb-0">
        <thead class="table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EstAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomComplet)
                </th>
                <th>
                    @Html.DisplayName("Téléphone")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomUtilisateur)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstAdmin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomComplet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AllPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomUtilisateur)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
