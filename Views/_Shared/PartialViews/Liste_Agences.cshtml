@model IEnumerable<genetrix.Models.Site>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nom")
        </th>
        <th>
            @Html.DisplayName("Responsable")
        </th>
        <th>
            @Html.DisplayName("Adresse")
        </th>
        <th>
            @Html.DisplayName("Ville")
        </th>
        <th>
            @Html.DisplayName("Pays")
        </th>
        <th>
            @Html.DisplayName("Telephone")
        </th>
        <th>
            @Html.DisplayName("Telephone 2")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Responsable.Nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Adresse)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ville)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Pays)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telephone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telephone2)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
    </td>
</tr>
}

</table>
