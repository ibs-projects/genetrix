@model IEnumerable<genetrix.Models.IHMStructure>
@{ 
    ViewBag.estStructure = "1";
}
<p>
    <a href="#" class="btn btn-soft-light" data-bs-toggle="modal" data-bs-target="#ajout-comp">Ajouter</a>
</p>
<table id="datatable-buttons0" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Composant")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ecrire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supprimer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Créer)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Composant.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lire)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ecrire)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supprimer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Créer)
                </td>
                <td>
                    <a href="@Url.Content("~/XtraRoles/del-ihm/"+item.ComposantId+"_"+item.IdStructure)">Supp</a>
                </td>
            </tr>
        }
    </tbody>

</table>

@Html.Partial("~/Views/_Shared/PartialViews/Modal_Ajout_Composant.cshtml")
