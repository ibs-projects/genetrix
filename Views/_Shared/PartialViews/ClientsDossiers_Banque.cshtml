@model IEnumerable<genetrix.Models.ClientDossierVM>

<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <tbody>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbrDossiers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valeur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devise)
            </th>
            <th></th>
        </tr>
    </tbody>

    <tfoot>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NbrDossiers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valeur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Devise)
                </td>
                <td>
                    @Html.ActionLink("Consulter", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tfoot>

</table>