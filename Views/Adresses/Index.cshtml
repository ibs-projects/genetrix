@model IEnumerable<genetrix.Models.Adresse>

@{
    ViewBag.Title = "Index";
}

@*@Html.Partial("~/Views/_Shared/_head_css.cshtml")*@

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header card-header1 text-white ">Vos adresses</div>
            <div class="card-body">
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <tbody>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Tel1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CodePostal)
                            </th>
                            <th></th>
                        </tr>
                    </tbody>

                    <tfoot>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tel1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodePostal)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tfoot>

                </table>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
