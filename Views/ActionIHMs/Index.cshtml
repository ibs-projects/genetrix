@model IEnumerable<genetrix.Models.ActionIHM>
@{
    ViewBag.Title = "Actions";
    ViewBag.pTitle = "Liste de actions";
    ViewBag.pageTitle = "Actions";
   ViewBag.pageImage = "~/assets/images/IU/bank.png";
}

@Html.Partial("~/Views/_Shared/_head_css.cshtml")

<p>
    <a class="" href="@Url.Action("Create","actionihms")">
        <i class="dripicons-plus me-2"></i>
        Nouvelle action
    </a>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <p class="text-danger">@ViewBag.msg</p>
                <h4 class="card-title">Liste de dossiers</h4>

                <div class="table-responsive">
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Intitule)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Icon)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Intitule)
                                    </td>
                                    <td>
                                        @*@Html.DisplayFor(modelItem => item.Icon)*@
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
