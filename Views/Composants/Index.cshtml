@model IEnumerable<genetrix.Models.Composant>
@{
    ViewBag.Title = "Composants";
    ViewBag.pTitle = "Liste de composants";
    ViewBag.pageTitle = "Composants";
    // ViewBag.pageImage = "~/assets/images/IU/bank.png";
}

@Html.Partial("~/Views/_Shared/_head_css.cshtml")

<p>
    <a class="" href="@Url.Action("Create","composants")">
        <i class="dripicons-plus me-2"></i>
        Nouvelle action
    </a>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <p class="text-danger">@ViewBag.msg</p>
                <h4 class="card-title">Liste de dossiers</h4>

                <div class="table-responsive">
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Action")
                                </th>
                                <th>
                                    @Html.DisplayName("Groupe")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EstActif)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Localistion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Numero)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NumeroMin)
                                </th><th>
                                    @Html.DisplayNameFor(model => model.NumeroMax)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Action.Intitule)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Groupe.Nom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EstActif)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Localistion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numero)
                                    </td> <td>
                                        @Html.DisplayFor(modelItem => item.NumeroMin)
                                    </td> <td>
                                        @Html.DisplayFor(modelItem => item.NumeroMax)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                    </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
