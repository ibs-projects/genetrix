@model IEnumerable<genetrix.Models.Structure>
@{
    ViewBag.Title = "Structures";
    ViewBag.pTitle = "Liste de structures";
    ViewBag.pageTitle = "Structures";
    ViewBag.pageImage = "~/assets/images/IU/structures.png";
}

@Html.Partial("~/Views/_Shared/_head_css.cshtml")

<p>
    <a class="" href="@Url.Action("Create","structures")">
        <i class="dripicons-plus me-2"></i>
        Nouvelle structure
    </a>
</p>
<div class="row">
    <div class="col-12">
        <p class="text-danger">@ViewBag.msg </p>
        <div class="card">
            <div class="card-header card-header1 text-white">
                Liste des structures de la banques
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.Nom)
                                </th>
                                <th>
                                    @Html.DisplayName("Type structure")
                                </th>

                                <th>
                                    @Html.DisplayName("Responsable")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Adresse)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ville)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pays)
                                </th>

                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TypeStructure.Intitule)
                                </td>
                                <td>
                                    @(item.Responsable!= null?item.Responsable.NomComplet:"")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adresse)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ville)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pays)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
