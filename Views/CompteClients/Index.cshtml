@model IEnumerable<genetrix.Models.CompteClient>


@{
    ViewBag.Title = "Utilisateurs";
    ViewBag.pTitle = "Liste d'Utilisateurs ";
    ViewBag.pageTitle = "Utilisateurs";
    ViewBag.pageImage = "~/assets/images/IU/user.png";
    //Layout = "~/Views/_Shared/_Layout.cshtml";
}

<!-- DataTables -->
<link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />

<!-- Responsive datatable examples -->
<link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
@Html.Partial("~/Views/_Shared/_head_css.cshtml")
@if (ViewBag.ModeRestraint)
{
    if (ViewBag.CreerUser)
    {
        <p>
            <a class="" href="@Url.Content("~/account/adduser")">
                <i class="dripicons-plus me-2"></i>
                Nouvel utilisateur
            </a>
        </p>
    }
}
else
{
    <p>
        <a class="" href="@Url.Content("~/account/adduser")">
            <i class="dripicons-plus me-2"></i>
            Nouvel utilisateur
        </a>
    </p>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header hidden">
                <h4 class="card-title">Liste d'utilisateurs</h4>
            </div>
            <div class="card-body">
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nom)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Prenom)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sexe)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tel2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tel1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayName("Nom d'utilisateur")
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Prenom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sexe)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tel2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tel1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomUtilisateur)
                                </td>
                                <td>
                                    @if (ViewBag.ModeRestraint)
                                    {
                                        if (ViewBag.ModifUser)
                                        {
                                            @Html.ActionLink("Editer", "Edit", new { id = item.Id }) <span> | </span>
                                        }
                                        @Html.ActionLink("Détails", "Details", new { id = item.Id })
                                        if (ViewBag.SuppUser)
                                        {
                                            <span> | </span>
                                            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                                        }
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Détails", "Details", new { id = item.Id })
                                        @Html.ActionLink("Editer", "Edit", new { id = item.Id }) <span> | </span>
                                        @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                                    }

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
