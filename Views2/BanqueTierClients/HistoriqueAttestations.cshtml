@model IEnumerable<genetrix.Models.DocumentAttache>


<div class="table-responsive">
    <table id="datatable01" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <tbody>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateSignature)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateExpiration)
                </th>
                <th></th>
            </tr>
        </tbody>

        <tfoot>
            @foreach (var item in Model.Where( d=>d.DateCreation != null && (DateTime.Now - d.DateSignature.Value).TotalDays >= 30))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateSignatureToString)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateExpirationToString)
                    </td>
                    <td>
                        <a href="#" _action_requied_loader="0" _id="@item.Id" class="doc-attest"><i class="mdi mdi-search"></i> Consulter</a>
                    </td>
                </tr>
            }
        </tfoot>
    </table>
</div>
