@{
    if (!string.IsNullOrEmpty("" + Model.Theme))
    {
        <script>
        $('.@(Model.Theme)').show();
        $('#@(Model.Theme)').show();
        </script>
    }
    if (!string.IsNullOrEmpty("" + Model.FondColor))
    {
        <script>
             $('.child').css('background-color', '@(Model.FondColor)');
        </script>
    }
    if (!string.IsNullOrEmpty("" + Model.DescriptionColor))
    {
        <script>
        $('.card-text,.blockquote').css('color', '@(Model.DescriptionColor)');
        </script>
    }
    if (!string.IsNullOrEmpty("" + Model.TitreColor))
    {
        <script>
        $('.titre').css('color', '@(Model.TitreColor)');
        </script>
    }
    if (Model.Id > 0)
    {
        <script>
            $(document).ready(function () {

            });
        </script>
    }
    if (Model.Width != null && Model.Heigth != null && Model.Width != 0 && Model.Heigth != 0)
    {
        <script>
            $(document).ready(function () {
                $('.card').css('height','@(Model.Heigth)px')
                $('.card').css('width', '@(Model.Width)px')
                $('body').css('height', '@(Model.Heigth)px')
                $('body').css('width','@(Model.Width)px')
            })
        </script>
    }
}