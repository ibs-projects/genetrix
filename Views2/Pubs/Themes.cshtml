@model genetrix.Models.PubItem
@{
    Layout = null;
    if (string.IsNullOrEmpty(Model.Cards))
    {
        Model.Cards += ";aa";
    }
}
@Html.Partial("~/Views/_Shared/_head_css.cshtml")
<style>
    body {
        background-color: transparent;
    }
    body {
        padding: 0 8px;
        overflow: hidden;
        font-family: 'Open Sans', sans-serif;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        justify-content: center;
    }
</style>
@{
    if (!string.IsNullOrEmpty("" + Model.Theme))
    {
        <style>
            .row, .child {
                display: none;
            }

            body {
                width: 450px !important;
                height: 450px !important;
                overflow: hidden;
                margin: 0px;
                border: none;
            }
        </style>
    }
    if (!string.IsNullOrEmpty(Model.FrameId) || !string.IsNullOrEmpty(Model.Theme))
    {
        if (Model.FrameId == "rigth-pub")
        {
            <style>
                .child {
                    margin: 0;
                    position: absolute;
                    top: 50%;
                    left: 58%;
                    width: 450px;
                    height: 350px;
                    -ms-transform: translate(-50%, -50%);
                    transform: translate(-50%, -50%);
                }
            </style>
        }
        else if (Model.FrameId == "left-pub")
        {
            <style>
                .child {
                    margin: 0;
                    position: absolute;
                    top: 50%;
                    left: 40%;
                    width: 450px;
                    height: 350px;
                    -ms-transform: translate(-50%, -50%);
                    transform: translate(-50%, -50%);
                }
            </style>
        }
        else
        {
            <style>
                .center {
                    margin: 0;
                    position: absolute;
                    top: 90%;
                    width: 350px;
                    height: 230px;
                    -ms-transform: translate(-50%, -50%);
                    transform: translate(-50%, -50%);
                }
            </style>
        }
    }
}
