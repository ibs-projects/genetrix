@model genetrix.Models.Dossier

<div class="modal fade" id="EditCourrier" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="height:auto">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myExtraLargeModalLabel">
                    Générer le courrier du dossier (@Model.GetFournisseur, @Model.MontantStringDevise)
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>   
            </div>
            <div class="modal-body;" id="123" style="max-height: 300mm;max-width: 250mm;padding:10px;text-align:center">
                <div style="margin: 10px; width: 100%; height: 100%">
                    <iframe src="@Url.Content("~/dossiers_banque/GenereCourier?id="+Model.Dossier_Id)" style="width:100%;height:100%"></iframe>
                </div>            
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    var h = window.innerHeight;
    document.getElementById("123").style.height = h + "px";
</script>