@model genetrix.Models.DFX

<div class="modal fade" id="EditCourrier" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen bg-transparent">
        <div class="modal-content" style="height:100%;width:100%">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myExtraLargeModalLabel">
                    Courier du DFX @Model.Numero du @Model.DateDebut.ToString("dd/MM/yyyy") Au @Model.DateFin.ToString("dd/MM/yyyy")
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>   
            </div>
            <div class="modal-body" id="123" style="height: 100%;width: 100%;padding:10px;">
                <div style="margin: 10px; width: 100%; height: 100%">
                    <iframe src="@Url.Content("~/dfxes/GenereCourier?id="+Model.Id)" style="width:100%;height:100%"></iframe>
                </div>            
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    var h = window.innerHeight;
    document.getElementById("123").style.height = h + "px";
</script>