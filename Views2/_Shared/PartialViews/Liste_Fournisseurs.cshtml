@model IEnumerable<genetrix.Models.Fournisseurs>

<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <tbody>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel1)
            </th>
            <th></th>
        </tr>
    </tbody>

    <tfoot>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel1)
                </td>
                <td>
                    <a href="@Url.Content("~/fournisseurs/details/"+item.Id)" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tfoot>
</table>
