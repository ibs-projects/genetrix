                <fieldset class="border border-1 p-1 mt-4">
                    <legend class="_legende mdi mdi-chevron-right-box ouvre" _id="pan-4" style="margin-top:-15px;font-size:1em;font-weight:bolder"><span style="background-color: white;">&emsp; Categorie</span></legend>
                    <div class="row mt-2 pan-actions" id="pan-4" style="padding-bottom:0px">
                        <div class="col-4">
                            <div numero="102" class="form-check mb-1" style="display:inline-block!important" dir="ltr">
                                <input type="checkbox" name="inp_dfx" class="form-check-input" style="margin-left:0px;margin-top:12px" id="inp_dfx">
                                <label class="form-check-label" for="inp_dfx" style="margin-left:5px;margin-top:12px">DFX</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <div numero="102" class="form-check mb-1" style="display:inline-block!important" dir="ltr">
                                <input type="checkbox" name="inp_fp" class="form-check-input" style="margin-left:0px;margin-top:12px" id="inp_fp">
                                <label class="form-check-label" for="inp_fp" style="margin-left:5px;margin-top:12px">Fonds propres</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <div numero="102" class="form-check mb-1" style="display:inline-block!important" dir="ltr">
