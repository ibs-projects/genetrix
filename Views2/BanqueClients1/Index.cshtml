@model IEnumerable<genetrix.Models.BanqueClient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Shared/Layouts/_layout_preloader.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gestionnaire.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Site.Nom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gestionnaire.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Site.Nom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
