@model genetrix.Models.Dossier

@{
    ViewBag.Title = "Etats";
    ViewBag.pTitle = "Etats du dossier";
    ViewBag.pageTitle = "Etats du dossier";
    ViewBag.pageImage = "~/assets/images/IU/encours.png";
}

<!-- DataTables -->
<link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />

<!-- Responsive datatable examples -->
<link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
@Html.Partial("~/Views/_Shared/_head_css.cshtml")
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-gradient-primary text-white">
                Les états d'un dossiers
            </div>
            <div class="card-body">
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <tbody>
                        <tr>
                            <th>
                                @Html.DisplayName("Etat")
                            </th>
                            <th>
                                @Html.DisplayName("Description")
                            </th>
                            <th>
                                @Html.DisplayName("Code couleur")
                            </th>
                        </tr>
                    </tbody>

                    <tfoot>
                        @{
                            <tr>
                                <td>
                                    Null
                                </td>
                                <td>
                                    Brouillon
                                </td>
                                <td>
                                    <span style="width:50px;background-color:cornflowerblue">Code couloeur</span>
                                </td>
                            </tr>
                            for (int i = 0; i < 60; i++)
                            {
                                try
                                {
                                    if (!string.IsNullOrEmpty(Model.GetEtapDossier(i)[0]))
                                    {
                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>
                                                @Model.GetEtapDossier(i)[0]
                                            </td>
                                            <td>
                                                <span style="width:50px;background-color:@Model.GetEtapDossier(i)[1]">Code couloeur</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                catch (Exception)
                                { }
                            }
                        }
                    </tfoot>

                </table>

            </div>
        </div>
    </div>
</div>


