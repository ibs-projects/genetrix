@model genetrix.Models.TypeStructure


@{
    ViewBag.Title = "Structure";
    ViewBag.pTitle = "Edition structure";
    ViewBag.pageTitle = "Type structure";
   ViewBag.pageImage = "~/assets/images/IU/bank.png";
}

@Html.Partial("~/Views/_Shared/_head_css.cshtml")

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-header">
                    <div class="col-md-12">
                        <h4 class="card-title mb-4" style="display:inline!important"></h4>
                    </div>
                </div>
                <hr />
                <div class="card-body">
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Intitule, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Intitule, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Intitule, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 mt-3">
                                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <p>
                        @Html.ActionLink("Voir la liste", "Index")
                    </p>
                </div>
            </div>

        }

    </div>

</div>
@Html.Partial("~/Views/_Shared/_Script_DataList.cshtml")
